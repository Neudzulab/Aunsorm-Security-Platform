/// `http3-experimental` Ã¶zelliÄŸi etkinleÅŸtirildiÄŸinde `Alt-Svc` baÅŸlÄ±ÄŸÄ±
/// oluÅŸturulamazsa panikler.
pub fn build_router(state: Arc<ServerState>) -> Router {
    // Get service mode from environment
    let service_mode = std::env::var("SERVICE_MODE").ok();
    println!("ðŸ”§ SERVICE_MODE: {service_mode:?}");

    // Base routes (available to all services)
    let mut router = Router::new()
        .route("/health", get(health))
        .route("/metrics", get(metrics));

    // Add service-specific routes based on SERVICE_MODE
    match service_mode.as_deref() {
        Some("auth-service") => {
            println!("ðŸ”§ Building AUTH SERVICE routes");
            router = add_auth_routes(router);
        }
        Some("cli-gateway") => {
            println!("ðŸ”§ Building CLI GATEWAY routes");
            router = add_cli_routes(router);
        }
        Some("id-service") => {
            router = add_id_routes(router);
        }
        Some("acme-service") => {
            router = add_acme_routes(router);
        }
        Some("gateway") => {
            // Gateway serves all routes (reverse proxy mode)
            router = add_default_routes(router);
        }
        Some("crypto-service") => {
            router = router;
            // TODO: Add crypto-specific endpoints like /encrypt, /decrypt
        }
        Some("mdm-service") => {
            router = add_mdm_routes(router);
        }
        Some("e2ee-service") => {
            router = add_e2ee_routes(router);
        }
        Some("blockchain-service") => {
            router = add_blockchain_routes(router);
        }
        _ => {
            // Default: serve all routes (backward compatibility)
            println!("ðŸ”§ Building DEFAULT routes for service_mode: {service_mode:?}");
            router = add_default_routes(router);
        }
    }

    #[cfg(feature = "http3-experimental")]
    let router = {
        let port = state.listen_port();
        let header_value =
            build_alt_svc_header_value(port).expect("Alt-Svc baÅŸlÄ±ÄŸÄ± oluÅŸturulamadÄ±");
        let header_value = Arc::new(header_value);
        router.layer(middleware::from_fn(
            move |req: axum::http::Request<Body>, next: Next| {
                let header_value = Arc::clone(&header_value);
                async move {
                    let mut response = next.run(req).await;
                    response
                        .headers_mut()
                        .insert(header::ALT_SVC, header_value.as_ref().clone());
                    response
                }
            },
        ))
    };

    let trace_layer = TraceLayer::new_for_http()
        .make_span_with(DefaultMakeSpan::new().level(Level::INFO))
        .on_request(DefaultOnRequest::new().level(Level::INFO))
        .on_response(
            DefaultOnResponse::new()
                .level(Level::INFO)
                .latency_unit(LatencyUnit::Millis),
        )
        .on_failure(
            DefaultOnFailure::new()
                .level(Level::ERROR)
                .latency_unit(LatencyUnit::Millis),
        );

    router.layer(trace_layer).with_state(state)
}

/// HTTP sunucusunu baÅŸlatÄ±r.
///
/// # Errors
///
/// AÄŸ dinleyicisi oluÅŸturulamazsa veya HTTP hizmeti baÅŸlatÄ±lamazsa `ServerError` dÃ¶ner.
pub async fn serve(config: ServerConfig) -> Result<(), ServerError> {
    let listen = config.listen;
    let state = Arc::new(ServerState::try_new(config)?);
    #[cfg(feature = "http3-experimental")]
    let _http3_guard = {
        let guard = spawn_http3_poc(listen, Arc::clone(&state))?;
        info!(
            port = listen.port(),
            "HTTP/3 PoC dinleyicisi etkinleÅŸtirildi"
        );
        guard
    };
    let router = build_router(Arc::clone(&state));
    let listener = tokio::net::TcpListener::bind(listen).await?;
    info!(address = %listen, "aunsorm-server dinlemede");
    let cleanup_state = Arc::clone(&state);
    tokio::spawn(async move {
        loop {
            tokio::time::sleep(Duration::from_secs(60)).await;
            let now = SystemTime::now();
            if let Err(err) = cleanup_state.purge_tokens(now).await {
                warn!(error = %err, "token temizliÄŸi baÅŸarÄ±sÄ±z");
            }
        }
    });
    axum::serve(listener, router.into_make_service())
        .with_graceful_shutdown(shutdown_signal())
        .await?;
    Ok(())
}

async fn shutdown_signal() {
    let ctrl_c = async {
        match signal::ctrl_c().await {
            Ok(()) => info!("SIGINT alÄ±ndÄ±, kapanÄ±ÅŸ baÅŸlatÄ±lÄ±yor"),
            Err(err) => warn!(error = %err, "CTRL+C sinyali dinlenemedi"),
        }
    };

    #[cfg(unix)]
    {
        let mut term_signal = match unix_signal(SignalKind::terminate()) {
            Ok(signal) => signal,
            Err(err) => {
                warn!(error = %err, "SIGTERM dinleyicisi kurulamadÄ±");
                ctrl_c.await;
                return;
            }
        };

        tokio::select! {
            () = ctrl_c => (),
            () = async {
                term_signal.recv().await;
                info!("SIGTERM alÄ±ndÄ±, kapanÄ±ÅŸ baÅŸlatÄ±lÄ±yor");
            } => (),
        }
    }

    #[cfg(not(unix))]
    ctrl_c.await;
}

