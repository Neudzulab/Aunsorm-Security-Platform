    device: DeviceRecord,
    policy: PolicyDocument,
    certificate: DeviceCertificatePlan,
}

async fn register_device(
    State(state): State<Arc<ServerState>>,
    Json(payload): Json<RegisterDeviceRequest>,
) -> Result<Json<DeviceEnrollmentResponse>, ApiError> {
    if payload.device_id.trim().is_empty() {
        return Err(ApiError::invalid_request("device_id cannot be empty"));
    }
    if payload.owner.trim().is_empty() {
        return Err(ApiError::invalid_request("owner cannot be empty"));
    }
    let platform = DevicePlatform::from_str(&payload.platform)
        .map_err(|err| ApiError::invalid_request(format!("platform value is invalid: {err}")))?;
    let enrollment = EnrollmentRequest {
        device_id: payload.device_id,
        owner: payload.owner,
        display_name: payload.display_name,
        platform: platform.clone(),
    };
    let device = state
        .mdm_directory()
        .register_device(enrollment)
        .map_err(|err| match err {
            MdmError::AlreadyRegistered(id) => {
                ApiError::invalid_request(format!("device already registered: {id}"))
            }
            MdmError::InvalidIdentifier(field) => {
                ApiError::invalid_request(format!("{field} value is invalid"))
            }
            other => ApiError::server_error(format!("MDM registration could not be completed: {other}")),
        })?;
    let policy = state
        .mdm_directory()
        .policy(&platform)
        .map_err(|err| ApiError::server_error(format!("MDM policy could not be read: {err}")))?
        .ok_or_else(|| ApiError::server_error("Policy not found for the given platform"))?;
    let certificate = state
        .mdm_directory()
        .device_certificate_plan(&device.device_id)
        .map_err(|err| ApiError::server_error(format!("Sertifika planÄ± hesaplanamadÄ±: {err}")))?
        .ok_or_else(|| ApiError::server_error("Sertifika planÄ± hesaplanamadÄ±"))?;
    Ok(Json(DeviceEnrollmentResponse {
        device,
        policy,
        certificate,
    }))
}

async fn fetch_policy(
    Path(platform): Path<String>,
