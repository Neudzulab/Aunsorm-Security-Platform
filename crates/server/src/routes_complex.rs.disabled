async fn next_sfu_step(
    State(state): State<Arc<ServerState>>,
    Json(payload): Json<NextSfuStepRequest>,
) -> Result<Json<NextSfuStepResponse>, ApiError> {
    if payload.context_id.trim().is_empty() {
        return Err(ApiError::invalid_request("context_id boÅŸ olamaz"));
    }
    let outcome = state
        .next_sfu_step(&payload.context_id)
        .await
        .map_err(|err| ApiError::server_error(format!("SFU ratchet adÄ±mÄ± Ã¼retilemedi: {err}")))?;
    match outcome {
        SfuStepOutcome::NotFound => Err(ApiError::invalid_request("SFU baÄŸlamÄ± bulunamadÄ±")),
        SfuStepOutcome::Expired => Err(ApiError::invalid_grant("SFU baÄŸlamÄ±nÄ±n sÃ¼resi doldu")),
        SfuStepOutcome::E2eeDisabled => Err(ApiError::invalid_request(
            "SFU baÄŸlamÄ± iÃ§in uÃ§tan uca ÅŸifreleme etkin deÄŸil",
        )),
        SfuStepOutcome::Step(step) => {
            let now = SystemTime::now();
            let expires_in = step
                .expires_at
                .duration_since(now)
                .unwrap_or_default()
                .as_secs();
            Ok(Json(NextSfuStepResponse {
                context_id: payload.context_id,
