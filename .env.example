# Aunsorm Server Environment Variables Template
# Copy this file to .env and update the values

# JWT Seed (Base64 encoded, 32 bytes)
# Generate with: openssl rand -base64 32
# Or PowerShell: [Convert]::ToBase64String([System.Security.Cryptography.RNGCryptoServiceProvider]::new().GetBytes(32))
AUNSORM_JWT_SEED_B64=CHANGE_ME_TO_SECURE_32_BYTE_BASE64_STRING

# Server Configuration
AUNSORM_LISTEN=0.0.0.0:4200
AUNSORM_ISSUER=https://aunsorm.local
AUNSORM_AUDIENCE=aunsorm-clients
AUNSORM_STRICT=1

# Database
AUNSORM_JTI_DB=/srv/data/jti.sqlite

# Logging
RUST_LOG=info,aunsorm_server=info